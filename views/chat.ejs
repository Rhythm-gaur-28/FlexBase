<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Chat | FlexBase</title>
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <link rel="stylesheet" href="/css/chat.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&family=Cormorant+Garamond:wght@500;600;700&display=swap" rel="stylesheet">
</head>

<body>
    <%- include('partials/navbar') %>
    
    <div class="chat-container">
        <!-- Left Sidebar -->
        <aside class="chat-sidebar">
            <!-- Search Section -->
            <div class="chat-search-section">
                <div class="search-container">
                    <svg class="search-icon" width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <circle cx="11" cy="11" r="8"/>
                        <path d="m21 21-4.35-4.35"/>
                    </svg>
                    <input type="text" id="userSearch" placeholder="Search conversations..." class="search-input">
                </div>
                <div id="searchResults" class="search-results"></div>
            </div>

            <!-- Chat List -->
            <div class="chat-list-section">
                <div class="chat-list-header">
                    <h2>Messages</h2>
                </div>
                
                <!-- Community Chat (Pinned) -->
                <div id="communityChat" class="chat-item community-chat" data-chat-type="community">
                    <div class="chat-avatar">
                        <div class="community-icon">ðŸ’Ž</div>
                    </div>
                    <div class="chat-info">
                        <div class="chat-name">FlexBase Community</div>
                        <div class="chat-last-message">Welcome to FlexBase Community!</div>
                    </div>
                    <div class="chat-meta">
                        <div class="chat-time">Now</div>
                        <div class="member-count" id="memberCount">0</div>
                    </div>
                </div>

                <!-- Private Chats -->
                <div id="chatsList" class="chats-list">
                    <!-- Chats will be populated here -->
                </div>
            </div>
        </aside>

        <!-- Right Chat Area -->
        <main class="chat-main">
            <!-- Welcome Screen -->
            <div id="welcomeScreen" class="welcome-screen">
                <div class="welcome-content">
                    <div class="flexbase-logo">
                        <img src="/images/tilted-sneaker.png" alt="FlexBase" class="logo-image">
                    </div>
                    <h2 class="welcome-title">FlexBase Chat</h2>
                    <p class="welcome-subtitle">Connect with sneaker enthusiasts worldwide</p>
                    <p class="welcome-description">Select a chat to start messaging</p>
                </div>
            </div>

            <!-- Active Chat -->
            <div id="activeChat" class="active-chat" style="display: none;">
                <!-- Chat Header -->
                <header class="chat-header">
                    <div class="chat-user-info">
                        <img src="" alt="" class="chat-user-avatar" id="activeChatAvatar">
                        <div class="chat-user-details">
                            <h3 class="chat-user-name" id="activeChatName"></h3>
                            <div class="chat-user-status" id="activeChatStatus">Online</div>
                        </div>
                    </div>
                    <div class="chat-actions">
                        <button class="chat-action-btn" id="chatOptions">
                            <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <circle cx="12" cy="12" r="1"/>
                                <circle cx="19" cy="12" r="1"/>
                                <circle cx="5" cy="12" r="1"/>
                            </svg>
                        </button>
                    </div>
                </header>

                <!-- Messages Area -->
                <div class="messages-container" id="messagesContainer">
                    <div class="messages-list" id="messagesList">
                        <!-- Messages will be populated here -->
                    </div>
                    
                    <!-- Typing Indicator -->
                    <div id="typingIndicator" class="typing-indicator" style="display: none;">
                        <div class="typing-avatar">
                            <img src="" alt="" id="typingAvatar">
                        </div>
                        <div class="typing-bubble">
                            <span id="typingUsername"></span> is typing...
                            <div class="typing-dots">
                                <span></span>
                                <span></span>
                                <span></span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Message Input -->
                <div class="message-input-container">
                    <div class="message-input-wrapper">
                        <textarea 
                            id="messageInput" 
                            class="message-input" 
                            placeholder="Type a message..."
                            rows="1"
                        ></textarea>
                        <div class="input-actions">
                            <button class="input-action-btn" id="attachButton">
                                <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path d="M21.44 11.05l-9.19 9.19a6 6 0 0 1-8.49-8.49l9.19-9.19a4 4 0 0 1 5.66 5.66L9.64 16.2a2 2 0 0 1-2.83-2.83l8.49-8.49"/>
                                </svg>
                            </button>
                            <button class="send-button" id="sendButton">
                                <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path d="M22 2L11 13M22 2l-7 20-4-9-9-4 20-7z"/>
                                </svg>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <!-- Scripts -->
    <script src="/socket.io/socket.io.js"></script>
    <script>
        // Pass user data to JavaScript
        window.currentUser = {
            id: '<%= user._id %>',
            username: '<%= user.username %>',
            profileImage: '<%= user.profileImage || "/images/default-profile.jpg" %>'
        };
    </script>
    <script src="/js/chat.js"></script>
</body>
</html>
